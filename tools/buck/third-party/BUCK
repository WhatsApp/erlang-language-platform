erlang_application(
    name = "jsone",
    srcs = glob(["jsone/src/*.erl"]),
    app_src = "jsone/src/jsone.app.src",
    erl_opts = ["+debug_info", "+inline"],
    shell_libs = [],
    use_global_parse_transforms = False,
    build_edoc_chunks = False,
    version = "1.8.1",
    visibility = ["PUBLIC"],
)

